<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Grippo" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Grippo.Splash" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@color/colorSplashBackground</item>
        <item name="windowSplashScreenBackground">@color/colorSplashBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Grippo</item>
    </style>
</resources>
